<Page
    x:Class="MyBuh.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBuh"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mcc="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
    mc:Ignorable="d">
     
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF009393"/>
                <GradientStop Color="#FF1E0F80" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button HorizontalAlignment="Left" Margin="63,78,0,0" VerticalAlignment="Top" Height="51" Width="155" Content="Сводка" Click="Button_Click_1" Background="{x:Null}" FontSize="18" BorderBrush="White" Foreground="White"/>
        <Button Content="Доходы" HorizontalAlignment="Left" Margin="223,78,0,0" VerticalAlignment="Top" Height="51" Width="155" Background="{x:Null}" FontSize="18" BorderBrush="White" Foreground="White"/>
        <Button Content="Расходы" HorizontalAlignment="Left" Margin="383,78,0,0" VerticalAlignment="Top" Height="51" Width="155" Background="{x:Null}" FontSize="18" BorderBrush="White" Foreground="White"/>
        <Button Content="Бюджет" HorizontalAlignment="Left" Margin="543,78,0,0" VerticalAlignment="Top" Height="51" Width="155" Background="{x:Null}" Foreground="White" BorderBrush="White" FontSize="18"/>
        <ListView x:Name="listview1" HorizontalAlignment="Left" Height="442" Margin="63,185,0,0" VerticalAlignment="Top" Width="795" BorderThickness="{StaticResource ButtonBorderThemeThickness}" />

        <Grid Name="Withdrawals" HorizontalAlignment="Left" Height="496" Margin="920,179,0,0" VerticalAlignment="Top" Width="375">
            <TextBox HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" Text="Сумма:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top"  Width="239"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,244,0,0" TextWrapping="Wrap" Text="Категория:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="259,273,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.294,0.145" Width="70"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" Text="Счет:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="236"/>
            <Button Content="Потратить
                    " HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" Width="201" RenderTransformOrigin="0.269,0.356" Height="45" Foreground="White"/>
        </Grid>
        <Grid Name="Deposits" Visibility="Collapsed"  HorizontalAlignment="Left" Height="496" Margin="920,179,0,0" VerticalAlignment="Top" Width="375">
            <TextBox HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="238"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" Text="Сумма:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top"  Width="239"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,244,0,0" TextWrapping="Wrap" Text="Категория:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="259,273,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.294,0.145" Width="70"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" Text="Счет:" VerticalAlignment="Top" Height="24" Width="141" FontSize="20"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="236"/>
            <Button Content="Зачислить
                    " HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" Width="201" RenderTransformOrigin="0.269,0.356" Height="45" Foreground="White"/>
        </Grid>
        <Grid Name="Budget" HorizontalAlignment="Left" Height="496" Margin="920,179,0,0" VerticalAlignment="Top" Width="375"/>
        <Grid Name="Graph" HorizontalAlignment="Left" Height="496" Margin="920,179,0,0" VerticalAlignment="Top" Width="375">

        </Grid>
        <Button Content="Графики" HorizontalAlignment="Left" Margin="703,78,0,0" VerticalAlignment="Top" Height="51" Width="155" Background="{x:Null}" Foreground="White" BorderBrush="White" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="920,72,0,0" TextWrapping="Wrap" Text="Текущий заголовок" VerticalAlignment="Top" Height="57" Width="352" FontSize="36" FontFamily="Segoe UI"/>
        <AppBar Margin="0,632,0,0" >
            <Grid  HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource AppBarButtonStyle}"
                            AutomationProperties.Name="Обработка чеков"
                            Content="&#xE114;"
                     />
                    <Button Style="{StaticResource AppBarButtonStyle}"
                            AutomationProperties.Name="Закрыть" 
                            Content="&#xE10A;"
                            Click="Button_Click_2"
                     />
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Vertical"/>
            </Grid>
        </AppBar>



    </Grid>
</Page>
