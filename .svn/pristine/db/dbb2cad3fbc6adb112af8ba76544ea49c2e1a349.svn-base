using System.Collections.Generic;
using System.Drawing;

namespace Puma.Net.Utilities
{
    /// <summary>
    /// Gets system registered fonts
    /// </summary>
    public static class FontStrings
    {
        /// <summary>
        /// Gets system registered fonts
        /// </summary>
        /// <returns>
        /// List of registered fonts' names
        /// </returns>
        public static IList<string> GetRegisteredFonts()
        {
            List<string> list = new List<string>();
            
            foreach (FontFamily family in FontFamily.Families)
		    {
                list.Add(family.Name);
		    }

            return list;
        }
    }
}
